<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/card"
    android:background="@color/card_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background_color"
        android:orientation="horizontal"
        android:id="@+id/linear_layout"
        android:weightSum="4.3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/name_linear_layout"
            android:layout_weight="1.3">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="17sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeStepGranularity="1sp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="9dp"
                android:id="@+id/country_name_textView"
                android:textColor="@color/card_header_text_color"
                android:textSize="17sp"
                android:text="@string/country_text"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:gravity="top">

            </androidx.appcompat.widget.AppCompatTextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="31dp"
            android:id="@+id/confirmed_linear_layout"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:id="@+id/confirmed_text"
                android:textColor="@color/confirmed_text_color"
                android:text="confirmed"

                android:textSize="12sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/confirmed_nuber_color"
                android:id="@+id/confirmed_number_textView"
                android:text="651651"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:layout_marginTop="33dp"
            android:id="@+id/holder_1"
            android:background="@color/vertical_border_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="31dp"
            android:id="@+id/recovered_linear_layout"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:id="@+id/recovred_text"
                android:textColor="@color/rrecovered_deaths_text_color"
                android:text="Recovered"

                android:textSize="12sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:id="@+id/recovered_number_textView"
                android:textColor="@color/recovered_number_color"
                android:text="651651"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="33dp"
            android:layout_marginTop="33dp"
            android:id="@+id/holder_2"
            android:background="@color/vertical_border_color" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="31dp"
            android:id="@+id/deaths_linear_layout"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:id="@+id/deaths_text"
                android:textColor="@color/rrecovered_deaths_text_color"
                android:text="Deaths"

                android:textSize="12sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/death_number_color"
                android:id="@+id/deaths_number_textView"
                android:text="651651"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>